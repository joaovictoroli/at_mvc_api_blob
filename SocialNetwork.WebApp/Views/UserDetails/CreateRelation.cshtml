@model SocialNetwork.WebApp.Models.DetailsUserUserViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<h4>UserContact</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRelation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group inline">
                <label asp-for="UserId" class="control-label"></label>
                <input readonly asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserId2" class="control-label"></label>
                <select class="form-select" asp-for="UserId2">
                    @foreach (var contact in Model.userUsers)
                    {
                            <option value="@contact.UserId">@contact.Name</option>
                    }
                </select>
            </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Details" asp-route-id="@Model.userDetail.UserId">Back to @Model.userDetail.Name</a>
</div>


